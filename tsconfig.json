{
  "include": ["ts/**/*.ts"], // TypeScriptファイルの場所
  "compilerOptions": {
    "target": "ES2016",
    "module": "commonjs",
    "lib": ["ES2016", "dom"],
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "outDir": "js/ts_out", // JavaScriptファイルの出力先
    "noErrorTruncation": true
    // "strictNullChecks": true
  }
}
